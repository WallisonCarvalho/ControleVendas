<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SystemSale</title>
    <meta charset="utf-8" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- css   Only-->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/ControleDeVendas.styles.css" asp-append-version="true" />
    <!-- CDN jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <!-- CDN Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="navbarScroll">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SystemSale</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                        <form class="d-flex">
                            @*<a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<span class="caret"></span></a>*@
                            <a class="nav-link text-dark" asp-area="" asp-controller="Logins" asp-action="TelaDeLogin">Login</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Logins" asp-action="NovoUsuario">Cadastro</a>
                        </form>
                    </div>
                </div>
            </nav>
            <div id="app-sidepanel" class="app-sidepanel">
                <div id="sidepanel-drop" class="sidepanel-drop"></div>
                <div class="sidepanel-inner d-flex flex-column">
                    <a href="#" id="sidepanel-close" class="sidepanel-close d-xl-none">&times;</a>
                    <div class="app-branding">
                        <a class="app-logo" href="Default.aspx">
                            @*<img class="logo-icon me-2" src="assets/images/app-logo.svg" alt="logo"><span class="logo-text" style="color: #e62e8c;">Controle de Vendas</span>*@
                            <h4>Logo</h4>
                        </a>

                    </div>
                    <nav id="app-nav-main" class="app-nav app-nav-main flex-grow-1">
                        <ul class="app-menu list-unstyled accordion" id="menu-accordion">
                            <li class="nav-item">
                                <a class="nav-link active" href="TelaInicial">
                                    <span class="nav-icon">
                                        @* /////////*@
                                    </span>
                                    <span class="nav-link-text">Home</span>
                                </a>
                            </li>
                            <li class="nav-item has-submenu">
                                <a class="nav-link submenu-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#submenu-1" aria-expanded="false" aria-controls="submenu-1">
                                    <span class="nav-icon">
                                        @* /////////*@
                                    </span>
                                    <span class="nav-link-text">Vendas</span>
                                    <span class="submenu-arrow">
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                                        </svg>
                                    </span>
                                </a>
                                <div id="submenu-1" class="collapse submenu submenu-1" data-bs-parent="#menu-accordion">
                                    <ul class="submenu-list list-unstyled">
                                        <li class="submenu-item"><a class="submenu-link" asp-controller="Vendas" asp-action="Create">Nova Venda</a></li>
                                        <li class="submenu-item"><a class="submenu-link" asp-controller="Vendas" asp-action="Index">ÚLtimas Vendas</a></li>
                                        <li class="submenu-item"><a class="submenu-link" asp-controller="Vendas" asp-action="Dashboard">Dashboard</a></li>
                                        <li class="submenu-item"><a class="submenu-link" asp-controller="Vendas" asp-action="Dashboard">Dashboard</a></li>

                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Produtoes" asp-action="Create">
                                    <span class="nav-icon">
                                        @* /////////*@
                                    </span>
                                    <span class="nav-link-text">Novo Produto</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Vendedors" asp-action="Create">
                                    <span class="nav-icon">
                                        @* /////////*@
                                    </span>
                                    <span class="nav-link-text">Vendedor</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Estoque" asp-action="Index">
                                    <span class="nav-icon">
                                        @* /////////*@
                                    </span>
                                    <span class="nav-link-text">Estoque</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="app-sidepanel-footer">
                        <nav class="app-nav app-nav-footer">
                            <ul class="app-menu footer-menu list-unstyled">
                                <li class="nav-item">
                                    <a class="nav-link" href="Help.aspx">
                                        <span class="nav-icon">
                                            @* /////////*@
                                        </span>
                                        <span class="nav-link-text">Configurações</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        }
        else
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="navbarScroll">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SystemSale</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                        <form class="d-flex">
                            @*<a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<span class="caret"></span></a>*@
                            <a class="nav-link text-dark" asp-area="" asp-controller="Logins" asp-action="TelaDeLogin">Login</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Logins" asp-action="NovoUsuario">Cadastro</a>
                        </form>
                    </div>
                </div>
            </nav>
        }




    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
        &copy; 2022 - SystemSale - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        </footer>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
