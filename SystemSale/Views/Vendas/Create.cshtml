<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="Create">
            <fieldset>
                <div class="form-group">
                    <label asp-for="Venda.VendedorId" class="col-lg-2 control-label"></label>
                    <div class="col-lg-10">
                        <select asp-for="Venda.VendedorId" asp-items="@(new SelectList(Model.Vendedores,"Id",
                   "Name"))" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Venda.ProdutoId" class="col-lg-2 control-label"></label>
                    <div class="col-lg-10">
                        <select asp-for="Venda.ProdutoId" asp-items="@(new SelectList(Model.Produtos,"Id",
                   "Nome"))" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Venda.DataVenda" class="col-lg-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="Venda.DataVenda" class="form-control" />
                        <span asp-validation-for="Venda.DataVenda" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Venda.ValorVenda" class="col-lg-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="Venda.ValorVenda" class="form-control" />
                        <span asp-validation-for="Venda.ValorVenda" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Venda.QtdeVenda" class="col-lg-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="Venda.QtdeVenda" class="form-control" />
                        <span asp-validation-for="Venda.QtdeVenda" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<br />

